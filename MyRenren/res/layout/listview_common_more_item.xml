<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >    
    <ImageView
        android:paddingTop="4dip"
        android:paddingBottom="4dip" 
        android:paddingLeft="20dip"
        android:layout_centerVertical="true"
        android:id="@+id/common_or_more_image_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/v5_2_1_desktop_list_newsfeed"/>
    <TextView 
        android:layout_centerVertical="true"
        android:id="@+id/commom_or_more_text_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新鲜事"
        android:layout_toRightOf="@id/common_or_more_image_icon"
        android:layout_marginLeft="10dip"
        android:textColor="@color/whilte"/>
    
    <!-- 未读消息，如果不存在，那就不显示该文本信息 -->
    <TextView 
        android:id="@+id/common_or_more_text_unchat_num"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/v5_9_chat_unread_num_bg_oval"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:text="2"
        android:gravity="center"
        android:textColor="@color/whilte"/>
    
</RelativeLayout>